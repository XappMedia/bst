{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "stripInternal": true,
    "target": "es5",
    "lib": ["es6", "dom"]
  },
  "include": [
    "bin/**/*.ts",
    "lib/**/*.ts",
    "test/**/*.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
